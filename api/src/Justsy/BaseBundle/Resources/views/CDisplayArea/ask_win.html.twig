<div type='ask' conv_id='{{ds["we_convers_list"]["rows"][0]["conv_id"]}}' top='' hide='' class="topiclayout convbox">
  <span class=" portrait"><img src="{{ ds["we_convers_list"]["rows"][0]["photo_url"] }}" onerror="this.src='{{ asset("bundles/fafatimewebase/images/no_photo.png") }}'"></span> 
  <span class="topicdetail convdetail">
    <span>
      <a href="#" class="employee_name post_staffname" login_account="{{ ds["we_convers_list"]["rows"][0]["login_account"] }}">{{ ds["we_convers_list"]["rows"][0]["nick_name"] }}</a>
      <span class="fafa_level_{{css_level}} portrait_level" title="{{ds["we_convers_list"]["rows"][0]["we_level"]}} 级">{{ds["we_convers_list"]["rows"][0]["auth_level"]}}{{ds["we_convers_list"]["rows"][0]["vip_level"]}}</span>
      {% if ds["we_convers_list"]["rows"][0]["isvip"] == "1" %}<img src="{{ asset("bundles/fafatimewebase/images/vip.png") }}" title="企业邮箱用户">{% endif %}
    </span>
    <p class="ask"><span class="askicon"></span><span class="conv_title"><a href="#" class="employee_name post_staffname" style="color:#0078B4;display:none;" login_account="{{ ds["we_convers_list"]["rows"][0]["login_account"] }}">{{ ds["we_convers_list"]["rows"][0]["nick_name"] }}</a><span class="conv_content">{{ this.replaceFaceEmote(ds["we_convers_list"]["rows"][0]["conv_content"])|raw|nl2br }}</span></span></p>
    {% include 'JustsyBaseBundle:CDisplayArea:attachs.html.twig' with {'ds': ds, 'this' : this} %}
    {% include 'JustsyBaseBundle:CDisplayArea:cc.html.twig' %}
    {% include 'JustsyBaseBundle:CDisplayArea:label.html.twig' %}
  </span>
  <div class="topicfunction" style="float:left;">
    <span class="functiontext">
      {% if (ds["we_convers_list"]["rows"][0]["login_account"] == app.user.username)or (app.user.is_in_manager_circles(ds["we_convers_list"]["rows"][0]["post_to_circle"])==1) %}
      <a href="javascript:void(0);"><span onclick="DelAsk(this, '{{ path("JustsyBaseBundle_component_cdisparea_delask") }}', '{{ ds["we_convers_list"]["rows"][0]["conv_root_id"] }}', '{{ asset("bundles/fafatimewebase/images/loading.gif") }}')">删除</span></a>｜
      {% endif %}
      {% if 1==0 %}
      {%if(trend)%}
      <a href="javascript:void(0)" onclick="CopyConv_OnClick(this)" 
        copyid="{{ ds["we_convers_list"]["rows"][0]["conv_root_id"] }}" 
        circle_id="{{ ds["we_convers_list"]["rows"][0]["post_to_circle"] }}"
        group_id="{{ ds["we_convers_list"]["rows"][0]["post_to_group"] }}"
        tplurl="{{ path("JustsyBaseBundle_component_cdisparea_getcopytemplate") }}">
        <span>转发{%if(ds["we_convers_list"]["rows"][0]["copy_num"]>0)%}({{ ds["we_convers_list"]["rows"][0]["copy_num"]|number_format }})
        {%endif%}</span></a>{%else%}
        <a href="javascript:void(0)" title="您还未获取该功能使用权限"
        copyid="{{ ds["we_convers_list"]["rows"][0]["conv_root_id"] }}" 
        circle_id="{{ ds["we_convers_list"]["rows"][0]["post_to_circle"] }}"
        group_id="{{ ds["we_convers_list"]["rows"][0]["post_to_group"] }}"
        tplurl="{{ path("JustsyBaseBundle_component_cdisparea_getcopytemplate") }}">
        <span>转发{%if(ds["we_convers_list"]["rows"][0]["copy_num"]>0)%}({{ ds["we_convers_list"]["rows"][0]["copy_num"]|number_format }})
        {%endif%}</span></a>
        {%endif%}｜
      {% endif %}
       {%if(trend)%}
      <a href="javascript:void(0)" onclick="{{ ds["we_convers_list"]["rows"][0]["atten_id"] > 0 ? "UnAttenConv_OnClick(this)" : "AttenConv_OnClick(this)" }}"
        attenid="{{ ds["we_convers_list"]["rows"][0]["conv_root_id"] }}"
        attenurl="{{ path("JustsyBaseBundle_component_cdisparea_attenconv") }}"
        unattenurl="{{ path("JustsyBaseBundle_component_cdisparea_unattenconv") }}"><span>
        <span class="attentext">{{ ds["we_convers_list"]["rows"][0]["atten_id"] > 0 ? "取消收藏" : "收藏" }}</span>
        {%if(ds["we_convers_list"]["rows"][0]["atten_num"]>0)%}
        (<span class="attennum">{{ ds["we_convers_list"]["rows"][0]["atten_num"]|number_format }}</span>){%endif%}</span>
        <img class="attening" src="{{ asset("bundles/fafatimewebase/images/loading.gif") }}" 
        style="display:none; height: 20px; width: 20px;"></a>｜
      <a href="javascript:void(0)"><span 
      onclick="ReplyLink_OnClick(this)">回答{%if(ds["we_convers_list"]["rows"][0]["reply_num"]>0)%}(<span 
      class="replynum">{{ ds["we_convers_list"]["rows"][0]["reply_num"]|number_format }}</span>){%endif%}</span></a>
      {%else%}
       <a href="javascript:void(0)" title="您还未获取该功能使用权限"
        attenid="{{ ds["we_convers_list"]["rows"][0]["conv_root_id"] }}"
        attenurl="{{ path("JustsyBaseBundle_component_cdisparea_attenconv") }}"
        unattenurl="{{ path("JustsyBaseBundle_component_cdisparea_unattenconv") }}"><span>
        <span class="attentext">{{ ds["we_convers_list"]["rows"][0]["atten_id"] > 0 ? "取消收藏" : "收藏" }}</span>
        {%if(ds["we_convers_list"]["rows"][0]["atten_num"]>0)%}
        (<span class="attennum">{{ ds["we_convers_list"]["rows"][0]["atten_num"]|number_format }}</span>){%endif%}</span>
        <img class="attening" src="{{ asset("bundles/fafatimewebase/images/loading.gif") }}" 
        style="display:none; height: 20px; width: 20px;"></a>｜
      <a href="javascript:void(0)" title="您还未获取该功能使用权限"><span 
     >回答{%if(ds["we_convers_list"]["rows"][0]["reply_num"]>0)%}(<span 
      class="replynum">{{ ds["we_convers_list"]["rows"][0]["reply_num"]|number_format }}</span>){%endif%}</span></a>
      {% endif %}
    </span>
    <span style="float:left;" class="comefrom">{{ ds["we_convers_list"]["rows"][0]["post_date_d"] }}</span>
    {% if ds["we_convers_list"]["rows"][0]["comefrom"] != "00" %}
    <span class="comefrom">来自{{ ds["we_convers_list"]["rows"][0]["comefrom_d"] }}</span>
    {% endif %}
  </div>
  {% include 'JustsyBaseBundle:CDisplayArea:reply.html.twig' with {'ds': ds, 'isask' : 1,'trend':trend} %}
</div>