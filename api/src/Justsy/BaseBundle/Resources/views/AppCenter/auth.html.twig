<script type="text/javascript" src="{{ asset('bundles/fafatimewebase/js/jquery.js')}}"></script>
<script type="text/javascript" src="{{ asset('bundles/fafatimewebase/js/bootstrap.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/fafatimewebase/js/jquery.form.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/fafatimewebase/js/Appcenter.js') }}"></script>
</head>
<body>
<div class="modal" id="appAuth" url="{{c_url}}" data-backdrop=false style="width:450px;margin-left: -225px;height:300px;margin-top: -150px;" show=false>
		    <div class="modal-header">
		    	<h5><img src='{{ asset('bundles/fafatimewebase/images/wefafa_logo.png')}}' style="width:48px;vertical-align: middle;">&nbsp;&nbsp;用户认证及授权中心</h5>  
		    </div>
		    <div class="modal-body" style="padding:15px;">
		        <div style="height: 50px;line-height: 50px;padding-left: 50px;">授权以下用户可以访问应用：{{appname}}</div>
		    	  <form id="authFrm" name="authFrm" method="post" action="{{ path('JustsyBaseBundle_appcenter_auth_auth')}}">		    	      
		    	      <div style="height: 40px;line-height: 40px;padding-left: 100px;"><span>帐号：</span><input id="u" name="u" type="text"></div>
		    	      <div style="height: 40px;line-height: 40px;padding-left: 100px;"><span>密码：</span><input id="p" name="p" type="password"></div>
		    	  </form>
		    </div>  
		    <div class="modal-footer">
		      <img style="display:none" src="{{ asset('bundles/fafatimewebase/images/ok.png') }}" width="16" height="16">
		      <span class="alert reg_alert alert-error" style="display:none">提交成功！</span>		    	
		    	<a href="javascript:void(0);" onclick="AppCenter.Auth()" id="sendBtn" class="btn btn-primary" style="color:white;">确定</a>  
		    	<A class=btn href="#" data-dismiss="modal" >关闭</A>   
</div>
</body>
</html>