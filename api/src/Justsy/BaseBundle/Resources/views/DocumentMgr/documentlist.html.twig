          <li id="mgr_two4" onClick="clearTr();setDisplayTab(this)" loadurl="{{ path('JustsyBaseBundle_documnet_listjson',{'network_domain':this.network_domain})}}?file_type=3&scope_type={{this.scope_type}}&scope_id={{this.scope_id}}">音/视频<a class='recordcount'></a></li>
