<div class="calendar_box1">
  <span class="calendar-text"><span class="text">{{ "now"|date("20y年 n月 j日") }}&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{% set weeks = ['星期日', '星期一', '星期二', '星期三', '星期四', '星期五', '星期六'] %}{{ weeks["now"|date("w")] }}</span></span>
  <div style="height: 50px; line-height: 50px;padding-top: 8px;text-align: center;">
  <span class="calendar-task"><span class="tip_new_num" style="left: 21px;top: -16px;padding-left: 3px;display:none"></span></span>
  <span class="calendar-note"><span class="tip_new_num" style="left: 21px;top: -16px;padding-left: 3px;display:none"></span></span>
  <span class="calendar-note"><span class="tip_new_num" style="left: 21px;top: -16px;padding-left: 3px;display:none"></span></span>
  </div>
</div>
<script type="text/javascript">
  $.getJSON("", function (data) {
    if (data.tasknum > 0) $(".calendar-task .num").text(data.tasknum).show();
    if (data.notenum > 0) $(".calendar-task .num").text(data.notenum).show();
  });
</script>