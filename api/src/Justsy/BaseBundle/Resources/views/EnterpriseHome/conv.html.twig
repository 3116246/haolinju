{% extends 'JustsyBaseBundle::master3c.html.twig' %}

{% block main_content_left %}
		{% render "JustsyBaseBundle:CPerBaseInfo:index" with {"name" : "foo"} %}
		{% include 'JustsyBaseBundle:EnterpriseHome:leftmenu.html.twig' with {'network_domain' : curr_network_domain} %}
{% endblock %}

{% block main_content_center %}
  <div>
  	<span style="display: inline-block;"><h3 class="bigtitletext">详细信息</h3></span>  	
  </div>
  <hr style="margin: 0px; width: 100%;">
  <div>
    {% if CanView == 1 %}
    {% render "JustsyBaseBundle:CDisplayArea:getConv" with {"conv_root_ids" : [conv_root_id],'trend': trend} %}
    
<script type="text/javascript">
$(document).ready(function () 
{
  $(".relaydetail_list").siblings(".allfor").remove();
  var id = new Date().getTime();
  $(".relaydetail_list").first().empty().append("<br>").attr("id", id);
  LoadComponent(id, "{{ path("JustsyBaseBundle_component_cdisparea_getreply") }}", {trend:{{trend}},conv_root_id: {{conv_root_id}}, pageindex: 1, t : new Date().getTime()});
});
</script>
    
    {% else %}
    <br>
    你没有权限查看这条信息或者记录已被删除！
    {% endif %}
  </div>
{% endblock %}

{% block main_content_right %}
  {% render "JustsyBaseBundle:DocumentMgr:getTopNew" with {'network_domain' : curr_network_domain,'scope_type':'1'} %}
{% endblock %}