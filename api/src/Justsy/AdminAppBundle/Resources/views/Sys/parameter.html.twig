<div class="parameter_area" >
	<div class="mb_menu_area">
		 <span onclick="parameter.toggle(this)" parameter_type="contract" class="mb_menu_active">合同提醒参数</span>
		 <span onclick="parameter.toggle(this)" parameter_type="birthday" class="mb_menu">生日提醒参数</span>
  </div>
  <div class="parameter_content">
  	<div id="paraneter_content1" para_type="contract">
		  <div class="parameter_panel" id="parameter_type1">
		  	 <div class="parameter_title" style="margin-bottom:20px;">合同到期提醒</div>
		  	 <div style="padding-left:28px;">
		  	 	  <span style="float:left;width:140px;">合同到期提前：</span>
		  	 	  <input class="mb_textbox" id="text_number1" style="height:22px;line-height:22px;float:left;text-align:center;margin:6px 8px 0 0; width: 100px;">
		  	 	  <select class="mb_combox" id="combox_unit1">
		  	 	  	 <option value=""></option>
		  	 	  	 <option value="day">天</option>
		  	 	  	 <option value="moth">月</option>
		  	 	  </select>
		  	 	  <span>开始提醒。</span>
		  	 </div>
		  	 <div style="padding-left:28px;">
		  	 	  <span style="float:left;width:140px;">提醒消息接收对象：</span>
		  	 	  <label style="float:left;padding-right:20px;font-weight:100;">
		  	 	      <input checked="checked" id="check_self1" type="checkbox" style="float:left;margin-top:10px;" /><span>签订合同人员</span>
		  	 	  </label>
		  	 	  <label style="float:left;padding-right:20px;font-weight:100;">
		  	 	      <input type="checkbox" id="check_org1" style="float:left;margin-top:10px;" /><span>上级部门负责人</span>
		  	 	  </label>
		  	 	  <span style="float:left;">合同管理人员：</span>
		  	 	  <input class="mb_textbox" disabled="disabled" style="height:22px;line-height:22px;float:left;width:295px;margin-top:6px;">
		  	 </div>
		  	 <div style="padding-left:28px;">
		  	 	  <span style="float:left;width:140px;">合同到期提醒消息：</span>
		  	 	  <input class="mb_textbox" id="text_sendmessage1" style="height:22px;line-height:22px;float:left;width:650px;margin-top:6px;">
		  	 </div>
		  	 <div style="padding-left:28px;" id="sendtype1">
		  	 	 <span style="float:left;width:140px;">消息提醒方式：</span>
		  	 	 <label style="float:left;padding-right:50px;font-weight:100;" >
		  	 	    <input type="checkbox" value="1" checked="checked" style="float:left;margin-top:10px;" />
		  	 	    <span>IM消息</span>
		  	 	 </label>
		  	 	 <label style="float:left;padding-right:50px;font-weight:100;" >
		  	 	    <input type="checkbox" value="2" style="float:left;margin-top:10px;" />
		  	 	    <span>手机短信</span>
		  	 	 </label>
		  	 	 <label style="float:left;padding-right:50px;font-weight:100;" >
		  	 	    <input type="checkbox" value="3" style="float:left;margin-top:10px;" />
		  	 	    <span>电子邮件</span>
		  	 	 </label>	  	 	 	  	 	 
		  	 </div>
		  </div>
		  <div class="parameter_panel" id="parameter_type2">
		  	 <div  class="parameter_title" style="margin-bottom:20px;">合同转正提醒</div>
